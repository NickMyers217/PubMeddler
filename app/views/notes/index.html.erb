<%- model_class = Note -%>
<div class="page-header">
	<h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<div class="well colorShadow">
	<table class="table table-striped">
		<thead>
			<tr>
				<th><%= model_class.human_attribute_name(:pmid) %></th>
				<th><%= model_class.human_attribute_name(:text) %></th>
				<th><%= model_class.human_attribute_name(:created_at) %></th>
				<th><%=t '.actions', :default => t("helpers.actions") %></th>
			</tr>
		</thead>
		<tbody>
			<% @notes.each do |note| %>
			<tr>
				<td><%= link_to note.pmid, note_path(note) %></td>
				<td><%= note.text.html_safe %></td>
				<td><%=l note.created_at %></td>
				<td>
					<%= link_to 'Edit', edit_note_path(note), :class => 'btn btn-default btn-xs' %>
					<%= link_to 'Destroy', note_path(note), :method => :delete,
					:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
					:class => 'btn btn-xs btn-danger' %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>

	<%= link_to 'New', new_note_path, :class => 'btn btn-primary' %>
</div>