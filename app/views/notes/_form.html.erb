<div class="row">
	<div class="col-sm-12">
		<div class="well colorShadow">
			<%= form_for @note, :html => { :class => "form-horizontal note" } do |f| %>

			<% if @note.errors.any? %>
			<div id="error_expl" class="panel panel-danger">
				<div class="panel-heading">
					<h3 class="panel-title"><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h3>
				</div>
				<div class="panel-body">
					<ul>
						<% @note.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
						<% end %>
					</ul>
				</div>
			</div>
			<% end %>

			
			<div class="control-group">
				<%= f.label :pmid, :class => 'control-label' %>
				<div class="controls">
					<%= f.text_field :pmid, :class => 'form-control' %>
				</div>
				<%= error_span(@note[:pmid]) %>
			</div>
			<div class="control-group">
				<%= f.label :text, :class => 'control-label' %>
				<div class="controls">
					<%= f.cktext_area :text, :class => 'ckeditor form-control', :ckeditor => { :toolbar => 'mini' } %>
				</div>
				<%= error_span(@note[:text]) %>
			</div>

			<br><%= f.submit nil, :class => 'btn btn-primary' %>
			<%= link_to 'Back', notes_path, :class => 'btn btn-default' %>

			<% end %>
		</div>
	</div>
</div>