<%- model_class = Note -%>
<div class="page-header">
	<h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="well colorShadow">
	<dl class="dl-horizontal">
		<dt><strong><%= model_class.human_attribute_name(:pmid) %>:</strong></dt>
		<dd><%= @note.pmid %></dd>
		<dt><strong><%= model_class.human_attribute_name(:text) %>:</strong></dt>
		<dd><%= @note.text.html_safe %></dd>
	</dl>

	<%= link_to 'Back', notes_path, :class => 'btn btn-default' %>
	<%= link_to 'Edit', edit_note_path(@note), :class => 'btn btn-default' %>
	<%= link_to 'Destroy', note_path(@note), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger' %>
</div>