<%- model_class = Query -%>
<div class="page-header">
	<h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="well colorShadow">
	<dl class="dl-horizontal">
		<dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
		<dd><%= @query.title %></dd>
		<dt><strong><%= model_class.human_attribute_name(:journal) %>:</strong></dt>
		<dd><%= @query.journal %></dd>
		<dt><strong>Search Terms</strong></dt>
		<dd><%= @query.term %></dd>
		<dt><strong>Results per page</strong></dt>
		<dd><%= @query.retmax %></dd>
		<dt><strong>Minimum date</strong></dt>
		<dd><%= @query.mindate %></dd>
		<dt><strong>Maximum date</strong></dt>
		<dd><%= @query.maxdate %></dd>
	</dl>

	<%= link_to 'Back', queries_path, :class => 'btn btn-default'  %>
	<%= link_to 'Edit', edit_query_path(@query), :class => 'btn btn-default' %>
	<%= link_to 'Destroy', query_path(@query), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger' %>
	<%= link_to 'Run', { :controller => 'queries', :action => 'run' }, :class => 'btn btn-success' %>
</div>